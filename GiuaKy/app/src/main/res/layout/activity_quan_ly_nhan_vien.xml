<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuanLyNhanVien">

    <ImageButton
        android:id="@+id/btnThemNhanVien"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_marginEnd="4dp"
        android:src="@drawable/add"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        tools:ignore="RtlHardcoded" />

    <SearchView
        android:id="@+id/svNhanVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ECA100"
        android:iconifiedByDefault="false"
        android:outlineSpotShadowColor="#358F00"
        android:queryHint="Tìm kiếm nhân viên" />

    <ListView
        android:id="@+id/lvNhanVien"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>